# Billing Configuration
# ===================

# ספק התשלומים הנוכחי
# אפשרויות: simulated, stripe, greeninvoice
BILLING_PROVIDER=simulated

# URL בסיסי לחשבוניות
INVOICES_BASE_URL=https://invoices.example.com

# GreenInvoice Configuration
# =========================
GREENINVOICE_API_KEY=your_greeninvoice_api_key_here
GREENINVOICE_BASE_URL=https://api.greeninvoice.co.il
GREENINVOICE_COMPANY_ID=your_company_id_here

# Stripe Configuration
# ===================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Webhook Configuration
# ====================
N8N_WEBHOOK_URL=http://localhost:5678/webhook/payment-updated
N8N_APPOINTMENT_WEBHOOK_URL=http://localhost:5678/webhook/appointment-updated
N8N_COMMUNICATION_WEBHOOK_URL=http://localhost:5678/webhook/communication-sent

# Simulated Provider Configuration
# ===============================
SIMULATED_SUCCESS_RATE=0.95  # 95% הצלחה
SIMULATED_DELAY_MS=1000      # עיכוב של שנייה
SIMULATED_FAILURE_MESSAGE=Simulated payment failure

# Payment Settings
# ===============
DEFAULT_CURRENCY=ILS
MIN_PAYMENT_AMOUNT=1
MAX_PAYMENT_AMOUNT=10000

# Invoice Settings
# ===============
INVOICE_TEMPLATE=default
INVOICE_LANGUAGE=he
AUTO_SEND_INVOICE_EMAIL=true

# Tax Configuration
# ================
TAX_RATE=0.17  # 17% מע"מ
INCLUDE_TAX_IN_INVOICE=true

# Notification Settings
# ====================
SEND_PAYMENT_CONFIRMATION_EMAIL=true
SEND_INVOICE_EMAIL=true
PAYMENT_NOTIFICATION_EMAIL=payments@example.com


