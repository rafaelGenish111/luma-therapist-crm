# Additional Environment Variables for Digital Signature System

# Digital Signature Security
# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Security
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=5

# File Storage for Signed Documents
STORAGE_PATH=./storage/signed-documents

# Security Features
HTTPS_REQUIRED=true
SECURITY_AUDIT_LOG=true

# Session Security
SESSION_SECRET=your-session-secret-key
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true

# IP Whitelist (Optional - comma separated)
ADMIN_IP_WHITELIST=127.0.0.1,::1

# Production Security Headers
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# SMS Service Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Email Configuration (Add to existing email setup)
# Platform branding for OTP emails
PLATFORM_NAME=Wellness Platform
SUPPORT_EMAIL=support@yoursite.com

# Development Mode Settings
# Set to false in production
MOCK_SMS_IN_DEV=true
ENABLE_DEV_LOGGING=true

# Document Security
PDF_ENCRYPTION_ENABLED=true
DOCUMENT_RETENTION_DAYS=2555  # 7 years (legal requirement)

# Backup and Recovery
BACKUP_SIGNED_DOCS=true
BACKUP_LOCATION=./backups/signed-documents

# Monitoring and Alerts
ALERT_ON_FAILED_SIGNATURES=true
ALERT_EMAIL=admin@yoursite.com

# Legal Compliance
GDPR_COMPLIANT=true
RETENTION_POLICY_ENABLED=true
