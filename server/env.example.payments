# Payment System Configuration
# ===========================

# Payment Provider (tranzila, cardcom, mock)
PAYMENT_PROVIDER=mock

# Application Base URL (required for callbacks)
APP_BASE_URL=https://your-domain.com

# Payment Link Settings
PAYMENT_LINK_EXPIRY_DAYS=7
MAX_PAYMENT_AMOUNT=10000
MIN_PAYMENT_AMOUNT=0.01
DEFAULT_CURRENCY=ILS
SUPPORTED_CURRENCIES=ILS

# Tranzila Configuration
# =====================
TRANZILA_TERMINAL_ID=your_terminal_id
TRANZILA_SECRET=your_secret_key
TRANZILA_BASE_URL=https://secure5.tranzila.com/cgi-bin/tranzila71u.cgi
TRANZILA_CALLBACK_URL=https://your-domain.com/api/payment-links/callback/tranzila
TRANZILA_SUCCESS_URL=https://your-domain.com/pay/success
TRANZILA_FAIL_URL=https://your-domain.com/pay/fail

# CardCom Configuration (if using CardCom)
# =========================================
CARDCOM_TERMINAL_ID=your_cardcom_terminal_id
CARDCOM_SECRET=your_cardcom_secret
CARDCOM_BASE_URL=https://secure.cardcom.solutions/Interface/LowProfile.aspx
CARDCOM_CALLBACK_URL=https://your-domain.com/api/payment-links/callback/cardcom
CARDCOM_SUCCESS_URL=https://your-domain.com/pay/success
CARDCOM_FAIL_URL=https://your-domain.com/pay/fail

# Security Settings
# =================
ENABLE_SIGNATURE_VERIFICATION=true
ALLOWED_CALLBACK_IPS=1.2.3.4,5.6.7.8
ENABLE_HTTPS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=20

# Logging Configuration
# =====================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=logs
MAX_LOG_FILES=5
MAX_LOG_SIZE=10m

# Email Notifications (optional)
# ==============================
EMAIL_ENABLED=false
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@your-domain.com
EMAIL_TEMPLATE_PAYMENT_SUCCESS=template_id
EMAIL_TEMPLATE_PAYMENT_FAILED=template_id
EMAIL_TEMPLATE_PAYMENT_EXPIRED=template_id

# WhatsApp Notifications (optional)
# =================================
WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=+972501234567
WHATSAPP_TEMPLATE_PAYMENT_LINK=template_id

# Database Configuration
# ======================
MONGODB_URI=mongodb://localhost:27017/luma-crm
DB_CONNECTION_TIMEOUT=30000
DB_MAX_POOL_SIZE=10

# Environment
# ===========
NODE_ENV=development
